#!/bin/bash

export BASE_URL=$(node -p 'require("./package").homepage')

make all

# Clean up pesky files
rm -rf ./**/.DS_Store

git checkout -B gh-pages
git add -f public
git commit -am "[skip ci] Rebuild website"
git filter-branch -f --prune-empty --subdirectory-filter public
git push -f origin gh-pages
git checkout -

echo ""
echo "Published to:"
echo "$BASE_URL"
echo ""
